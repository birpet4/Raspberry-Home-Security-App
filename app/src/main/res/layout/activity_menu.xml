<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/tvResponse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="241dp" />

    <Button
        android:id="@+id/btnStartPCA"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="Start PCA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/btnStopPCA"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:text="Stop PCA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStartPCA"
        app:layout_constraintTop_toBottomOf="@+id/btnStartPCA"
        app:layout_constraintVertical_bias="0.426" />

    <LinearLayout
        android:id="@+id/switchContainer"
        android:layout_width="368dp"
        android:layout_height="333dp"
        android:layout_marginTop="76dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnStartPCA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>


</android.support.constraint.ConstraintLayout>